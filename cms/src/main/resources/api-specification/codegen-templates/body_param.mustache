    {{#mediaTypes}}
        <p class="nhsd-t-body">
            Content type: <strong class="nhsd-!t-font-weight-bold">{{name}}</strong>
        </p>

        {{#example}}
            <p class="nhsd-!t-font-weight-bold nhsd-t-body">Example</p>
            {{>body_example}}
        {{/example}}

        {{^example}}
            {{^examples}}
                {{#schema.example}}
                    <p class="nhsd-!t-font-weight-bold nhsd-t-body">Example</p>
                    {{>body_example}}
                {{/schema.example}}
            {{/examples}}
        {{/example}}

        {{#examples}}
            {{#@first}}
                {{#hasOneItem examples}}
                    <p class="nhsd-!t-font-weight-bold nhsd-t-body">Example</p>
                {{else}}
                    <p class="nhsd-!t-font-weight-bold nhsd-t-body">Examples</p>
                {{/hasOneItem}}
            {{/@first}}

            {{#summary}}
            <p class="nhsd-t-body">{{summary}}</p>
            {{/summary}}

            {{#description}}
            {{{markdown description levelToNormaliseHeadingsTo=7}}}
            {{/description}}

            {{#value}}{{>body_example}}{{/value}}
        {{/examples}}

        {{#if schema}}
            {{#assign "schemaUUID"}}{{uuid}}{{/assign}}
            <div class="body__schema__header">Schema
                <span class="schema__header__buttons">
                    <button class='schemaButton js collapseAll' onclick="collapseAll('{{variable "schemaUUID"}}')">Collapse all</button>
                    <button class='schemaButton js expandAll' onclick="expandAll('{{variable "schemaUUID"}}')">Expand all</button>
                </span>
            </div>
            <div class="body__schema" data-schema-uuid="{{variable "schemaUUID"}}">
            {{#vendorExtensions.x-schema}}
                {{>schema}}
            {{/vendorExtensions.x-schema}}
            </div>
        {{/if}}

    {{/mediaTypes}}