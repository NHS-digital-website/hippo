<div class="nhsd-t-col-xs-12 nhsd-t-col-s-4">
{{>sticky-nav}}
</div>

<div id="content" class="nhsd-t-col-xs-12 nhsd-t-col-s-8" aria-label="Document content">

    <!-- API Title: {{{appName}}} -->

    <div id="api-description" class="article-section">
        {{{markdown appDescription headingIdPrefix="api-description__" levelToNormaliseHeadingsTo=2}}}
    </div>
        {{#apiInfo}}
            {{#apis}}
                {{#assign "tryThisApiDisabled"}}{{vendorExtensions.x-spec-publication.try-this-api.disabled}}{{/assign}}
                {{#operations}}
                    {{#eq baseName 'Default'}}
                    <div id="api-endpoints" class="article-section">
                        <h2 class="nhsd-t-heading-xl">Endpoints</h2>
                    </div>
                    {{else}}
                    <div id="api-{{baseName}}" class="article-section">
                        <h2 class="nhsd-t-heading-xl">Endpoints: {{baseName}}</h2>
                    </div>
                    {{/eq}}
                        {{#operation}}
                            {{#contents}}
                                {{#@first}}
                                    <div id="api-{{baseName}}-{{nickname}}" class="article-section-with-sub-heading">
                                        <article id="api-{{baseName}}-{{nickname}}-0">
                                            <!-- https://digital.nhs.uk/about-nhs-digital/corporate-information-and-documents/nhs-digital-style-guidelines/features-of-the-nhs-digital-website-cms/call-to-action-cta-buttons -->
                                            <h3 class="nhsd-t-heading-l">{{summary}}</h3>
                                            <div class="endpoint_path">
                                                <div class="method">{{httpMethod}}</div>
                                                <div class="pre"><pre>{{path}}</pre></div>
                                                {{#ifVariableIsFalse "tryThisApiDisabled"}}
                                                    {{#eq baseName 'Default'}}{{#assign "sanitizedBaseName"}}{{lower baseName}}{{/assign}}{{else}}{{#assign "sanitizedBaseName"}}{{baseName}}{{/assign}}{{/eq}}
                                                        <div class="try"><a onclick="tryEndpointNow('/{{sanitizedBaseName}}/{{operationId}}')" class="ctabtn-left ctabtn--nhs-digital-button" onkeyup="return vjsu.onKeyUp(event)">Try this API</a></div>
                                                {{/ifVariableIsFalse}}
                                            </div>

                                            {{{markdown notes levelToNormaliseHeadingsTo=4}}}

                                            {{#isAnyTrue this hasPathParams hasHeaderParams hasBodyParam hasFormParams hasQueryParams}}
                                                <h4 class="nhsd-t-heading-m">Request</h4>
                                            {{/isAnyTrue}}

                                            {{#hasPathParams}}
                                                <h5 class="nhsd-t-heading-s">Path parameters</h5>
                                                {{#partial "request-param-table"}}
                                                    {{#pathParams}}
                                                        {{>params_tbody}}
                                                    {{/pathParams}}
                                                {{/partial}}
                                                {{>params_table}}
                                            {{/hasPathParams}}

                                            {{#hasQueryParams}}
                                                <h5 class="nhsd-t-heading-s">Query parameters</h5>
                                                {{#partial "request-param-table"}}
                                                    {{#queryParams}}
                                                        {{>params_tbody}}
                                                    {{/queryParams}}
                                                {{/partial}}
                                                {{>params_table}}
                                            {{/hasQueryParams}}

                                            {{#hasHeaderParams}}
                                                <h5 class="nhsd-t-heading-s">Headers</h5>
                                                {{#partial "request-param-table"}}
                                                    {{#headerParams}}
                                                        {{>params_tbody}}
                                                    {{/headerParams}}
                                                {{/partial}}
                                                {{>params_table}}
                                            {{/hasHeaderParams}}

                                            {{#hasFormParams}}
                                                <h5 class="nhsd-t-heading-s">Form parameters</h5>
                                                {{#partial "request-param-table"}}
                                                    {{#formParams}}
                                                        {{>params_tbody}}
                                                    {{/formParams}}
                                                {{/partial}}
                                                {{>params_table}}
                                            {{/hasFormParams}}

                                            {{#hasBodyParam}}
                                                <div class="httpparams">
                                                    <h5 class="nhsd-t-heading-s">Body</h5>
                                                    {{#bodyParams}}
                                                        {{#required}}<div class="nhsd-!t-col-red">Required</div>{{/required}}

                                                        {{#vendorExtensions.x-body}}
                                                            {{>body_param}}
                                                        {{/vendorExtensions.x-body}}
                                                    {{/bodyParams}}
                                                </div>
                                            {{/hasBodyParam}}

                                            {{#responses}}
                                                {{#@first}}
                                                    <h4 class="nhsd-t-heading-m">Response</h4>
                                                {{/@first}}

                                                <h5 class="nhsd-t-heading-s">HTTP status: {{code}}</h5>
                                                <div>{{{markdown message levelToNormaliseHeadingsTo=5}}}</div>

                                                {{#hasHeaders}}
                                                    <h6 class="nhsd-t-heading-xs">Headers</h6>
                                                    {{#partial "request-param-table"}}
                                                        {{#headers}}
                                                            {{>params_tbody}}
                                                        {{/headers}}
                                                    {{/partial}}
                                                    {{>params_table}}
                                                {{/hasHeaders}}

                                                {{#vendorExtensions.x-body}}
                                                    {{#mediaTypes}}
                                                        {{#@first}}
                                                        <h6 class="nhsd-t-heading-xs">Body</h6>
                                                        {{/@first}}
                                                    {{/mediaTypes}}
                                                    {{>body_param}}
                                                {{/vendorExtensions.x-body}}
                                            {{/responses}}
                                        </article>
                                    </div>
                                {{/@first}}
                            {{/contents}}
                        {{/operation}}
                {{/operations}}
            {{/apis}}
        {{/apiInfo}}
</div>

