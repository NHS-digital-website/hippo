                "required": true,
                "schema": {
                    "type": "string",
                    "pattern": "^W/\"[0-9]+\"$",
                    "example": "W/\"2\""
                }
            }
        },
        "schemas": {
            "Patient": {
                "type": "object",
                "required": [
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "resourceType": {
                        "type": "string",
                        "description": "FHIR resource type.",
                        "default": "Patient",
