                                <phase>validate</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
                                    <descriptors>
                                        <descriptor>${project.basedir}/src/main/assembly/distribution-with-development-data.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
