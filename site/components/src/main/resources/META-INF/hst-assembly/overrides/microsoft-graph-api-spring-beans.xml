<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate" />

    <bean id="applicationId" class="java.lang.String">
        <constructor-arg value="a1a6e366-394a-43a6-9de8-4f2096814edf" />
    </bean>

    <bean id="clientSecret" class="java.lang.String">
        <constructor-arg value="h9Fs87G-vi-6UT_l]Zw?8M=L?@zFjYeh" />
    </bean>

    <bean id="redirectUri" class="java.lang.String">
        <constructor-arg value="http://localhost:8080/site/restapi/intranet/auth/response" />
    </bean>

    <bean id="accessTokenEncoder" class="uk.nhs.digital.intranet.utils.AccessTokenEncoder" />

    <!-- todo replace with values from property file   -->
    <bean id="authorizationProvider" class="uk.nhs.digital.intranet.provider.AuthorizationProvider">
        <constructor-arg name="restTemplate" ref="restTemplate" />
        <constructor-arg name="applicationId" ref="applicationId" />
        <constructor-arg name="clientSecret" ref="clientSecret" />
        <constructor-arg name="redirectUri" ref="redirectUri" />
    </bean>

    <bean id="cookieProvider" class="uk.nhs.digital.intranet.provider.CookieProvider">
        <constructor-arg name="encoder" ref="accessTokenEncoder" />
    </bean>

</beans>
